<!-- 		<servlet-name>remoteLogging</servlet-name> -->
<!-- 		<url-pattern>/pint/remote_logging</url-pattern> -->
<!-- 	</servlet-mapping> -->
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
